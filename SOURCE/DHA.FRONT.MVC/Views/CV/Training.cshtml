@using DHA.BUSINESS.Model
@model List<TrainingBM>;

<h1>Mes Formations</h1>
<br/>

<div class="row">
    @foreach (TrainingBM __trainingM in Model)
    {
        <div class="col">
            <div class="card">
                <div class="card-header">
                    @__trainingM.year
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (string __strTrainingDetail in __trainingM.details)
                        {
                            <li class="list-group-item">@__strTrainingDetail</li>
                        }
                    </ul>
                </div>
                <div class="card-footer">
                    @__trainingM.location
                </div>
            </div>
        </div>
    }   
</div>


